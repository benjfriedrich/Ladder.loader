html{margin:0}body{max-width:100%;height:100%;margin:0;background-color:#fff;padding:2vw 2vw 0;font-family:brandon-grotesque,sans-serif}#page-wrapper{background-color:#f43132;color:#fff}#content{max-width:100%;max-height:100%}#top-fold{min-height:92vh}@media screen and (min-width:680px){#top-fold{min-height:0}}#sig{height:45px;margin:15px 0 0 15px}@media screen and (min-width:680px){#sig{height:55px;margin:20px 0 0 20px}}#badge{text-align:center;margin:6vh auto 0}@media screen and (min-width:680px){#badge{margin:1vh auto 0}}#badge h1{text-align:center;font-size:35pt;margin:10px 0}@media screen and (min-width:680px){#badge h1{font-size:50pt}}#ladder{max-width:180px;margin:0 auto}@media screen and (min-width:680px){#ladder{max-width:200px}}#quick-hits{text-align:left;padding:0;display:table;margin:40px auto 0;list-style:none;font-size:18pt}#quick-hits li{line-height:30pt}#download-links{margin:50px auto;display:flex;justify-content:center}button,.bttn{background-color:#f43132;color:#fff;border:solid;border-width:3px;border-radius:40px;margin:10px 15px;font-weight:700;min-width:100px;padding:15px;font-size:17pt;text-decoration:none;text-align:center}@media screen and (min-width:680px){button,.bttn{min-width:200px;font-size:20pt;border-width:4px}}button,.bttn:hover{background-color:#fff;color:#f43132;border:solid;border-width:3px}@media screen and (min-width:680px){button,.bttn:hover{border-width:4px}}main{padding:0 14px}@media screen and (min-width:680px){main{max-width:800px;margin:0 auto}}main h2{font-size:24pt;text-align:center;margin:20px 0 7px}@media screen and (min-width:680px){main h2{font-size:36pt;margin:40px 0 7px}}main p{font-size:14pt;text-indent:1em;margin:10px auto;max-width:600px}pre{background:#fff!important;border-radius:10px;font-size:10pt!important;margin:30px 0!important}pre code{margin:0!important;white-space:pre-wrap!important;word-wrap:break-word!important;word-break:break-word!important;padding:none!important}footer{text-align:center;padding:30px 30px 15px}footer p{margin:10px}